{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            //!!! You are going to have to modify the program with the binary for a given assignment
            "program": "${fileWorkspaceFolder}/${input:pickBinary}",
            "args": [
                "<",
                "${fileWorkspaceFolder}/tests/t${input:pickTest}.in",
                ">",
                "${fileWorkspaceFolder}/results/t${input:pickTest}.myout"
            ],
            "stopAtEntry": false,
            "cwd": "${fileWorkspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make",
            "miDebuggerPath": "gdb"
        }
    ],
    "inputs":[
        {
            "id": "pickTest",
            "type": "promptString",
            "description": "TestNumber to run",
            "default": "01"
        },
        {
            "id": "pickBinary",
            "type": "promptString",
            "description": "Binary to run",
            "default": "run"
        }
    ]
}